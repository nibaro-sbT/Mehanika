package cityObjects;

import java.awt.Color;

public class Bloc {
	public final static int MIN_TILE=5;
	public final static int MAX_TILE_LVL=6;
	
	private int tilelvl;
	private Color tileCololr;
	private boolean left;
	private boolean up;
	

	public Bloc(int tilelvl, Color tileCololr, boolean up, boolean left) {
		super();
		this.tilelvl = tilelvl;
		this.tileCololr = tileCololr;
		this.left = left;
		this.up = up;
	}

	public Bloc(int tilelvl, Color tileCololr) {
		super();
		this.tilelvl = tilelvl;
		this.tileCololr = tileCololr;
	}
	
	public int getTilelvl() {
		return tilelvl;
	}
	public void setTilelvl(int tilelvl) {
		this.tilelvl = tilelvl;
	}
	public Color getTileCololr() {
		return tileCololr;
	}
	public void setTileCololr(Color tileCololr) {
		this.tileCololr = tileCololr;
	}
	public boolean isLeft() {
		return left;
	}

	public void setLeft(boolean left) {
		this.left = left;
	}

	public boolean isUp() {
		return up;
	}

	public void setUp(boolean up) {
		this.up = up;
	}
	
	
}
